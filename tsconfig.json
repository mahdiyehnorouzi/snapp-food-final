{
  "compilerOptions": {
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./assets/*"]
    },
    "types": ["webpack-env"],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "namedExports": true
        }
      }
    ],
    "typeRoots": ["./@types", "src/types", "node_modules/@types"]
  }
}
